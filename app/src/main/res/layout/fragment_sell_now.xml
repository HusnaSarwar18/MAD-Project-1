<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellNowFragment"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell Your Car"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/carBrandInput"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="Car Brand"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/carModelInput"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="Car Model"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/carPriceInput"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="Price"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/sellNowButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sell Now"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</FrameLayout>