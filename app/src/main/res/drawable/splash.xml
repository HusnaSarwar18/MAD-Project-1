<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <color android:color="@color/themeblue" />
    </item>

    <!-- Centered logo with fixed size -->
    <item>
        <bitmap
            android:src="@drawable/pakwheels"
            android:gravity="center"
            android:tileMode="disabled" /> <!-- Prevents tiling -->

        <!-- Set the size of the image here -->
        <item
            android:width="100dp"
            android:height="100dp"
            android:gravity="center" />
    </item>

</layer-list>